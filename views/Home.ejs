    </div>
</div>

<div id="explore" class="exploreArticleCourse">
    <h1 class="exploreArticleCourseH1">Explore Our Article Based Course</h1>
    
    <% results.forEach((result)=>{ %>

        <div class="course">
            <img src="/uploads/<%= result.catLogo %>" alt="" class="courseImg">
            <!-- <p class="courseSigned">Article Based</p> -->
            <h3 class="courseH3"><%= result.catName %></h3>
          
                <h4 class="totalPost">Running <br> Course </h4>
        
            
            <h4 class="courseLevel">Course Level <br> Beginner</h4>
            <a href="/course/<%= result.catName.replace(/\s+/g,'-') %>" class="courseLink">Learn Now</a>
        </div>  
   <% }); %>







    



</div>





<script>
    const d = document.querySelector(".right_bottom_header");
  const e = document.querySelector(".fa-align-justify");
    e.addEventListener('click',()=>{
        d.classList.toggle("visible");
    })
</script>

